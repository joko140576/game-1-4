<body>

  <h1>ðŸŽ² Random Name Picker ðŸŽ²</h1>
  <div id="name-display">Siapa yang terpilih?</div>
  <button onclick="pickRandomName()">Pilih Nama</button>

  <script>
    const names = ["Salsa", "Iren", "Bima", "Bintang", "Bulan", "Satria", "Icul", "Amel"];
    const display = document.getElementById("name-display");

    function pickRandomName() {
      let count = 0;
      const interval = setInterval(() => {
        const randomIndex = Math.floor(Math.random() * names.length);
        display.textContent = names[randomIndex];
        count++;
        if (count > 20) {  // berhenti setelah 20 pergantian nama (efek animasi)
          clearInterval(interval);
        }
      }, 100); // kecepatan animasi (semakin kecil semakin cepat)
    }
  </script>

