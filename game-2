<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Kuis Interaktif</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f4f4;
      max-width: 600px;
      margin: 50px auto;
      padding: 20px;
      border-radius: 10px;
      background: white;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h2 {
      text-align: center;
      color: #333;
    }
    .question-box {
      margin-top: 30px;
    }
    .question-box p {
      font-weight: bold;
      font-size: 18px;
    }
    label {
      display: block;
      margin: 10px 0;
    }
    button {
      margin-top: 20px;
      padding: 10px 20px;
      font-size: 16px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    #submitBtn {
      background-color: #007bff;
      color: white;
    }
    #nextBtn {
      background-color: #28a745;
      color: white;
      display: none;
    }
    #feedback {
      margin-top: 15px;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <h2>Kuis Pilihan Ganda</h2>

  <div class="question-box" id="quizContainer">
    <!-- Soal akan dimuat di sini -->
  </div>

  <div id="feedback"></div>

  <button id="submitBtn">Submit</button>
  <button id="nextBtn">Next</button>

  <script>
    const quiz = [
      {
        question: "1. Ibukota Indonesia adalah:",
        options: ["Surabaya", "Jakarta", "Bandung"],
        correct: 1
      },
      {
        question: "2. Lambang sila ke-5 Pancasila adalah:",
        options: ["Bintang", "Kepala Banteng", "Padi dan Kapas"],
        correct: 2
      },
      {
        question: "3. 5 + 7 = ...",
        options: ["11", "12", "13"],
        correct: 1
      },
      {
        question: "4. Warna primer adalah:",
        options: ["Merah, Kuning, Biru", "Hijau, Oranye, Ungu", "Hitam, Putih, Abu-abu"],
        correct: 0
      },
      {
        question: "5. Hewan berkaki dua adalah:",
        options: ["Ayam", "Kucing", "Gajah"],
        correct: 0
      }
    ];

    let currentQuestion = 0;

    function loadQuestion() {
      const q = quiz[currentQuestion];
      const container = document.getElementById("quizContainer");
      const feedback = document.getElementById("feedback");

      document.getElementById("nextBtn").style.display = "none";
      document.getElementById("submitBtn").style.display = "inline-block";
      feedback.innerHTML = "";

      let html = `<p>${q.question}</p>`;
      q.options.forEach((opt, i) => {
        html += `<label><input type="radio" name="answer" value="${i}"> ${opt}</label>`;
      });
      container.innerHTML = html;
    }

    document.getElementById("submitBtn").addEventListener("click", function () {
      const selected = document.querySelector('input[name="answer"]:checked');
      const feedback = document.getElementById("feedback");

      if (!selected) {
        alert("Pilih salah satu jawaban terlebih dahulu!");
        return;
      }

      const answer = parseInt(selected.value);
      if (answer === quiz[currentQuestion].correct) {
        feedback.style.color = "green";
        feedback.innerText = "Jawaban Anda Benar!";
        document.getElementById("submitBtn").style.display = "none";
        document.getElementById("nextBtn").style.display = "inline-block";
      } else {
        feedback.style.color = "red";
        feedback.innerText = "Jawaban Anda Salah. Coba lagi.";
      }
    });

    document.getElementById("nextBtn").addEventListener("click", function () {
      currentQuestion++;
      if (currentQuestion < quiz.length) {
        loadQuestion();
      } else {
        document.getElementById("quizContainer").innerHTML = "<h3>Kuis selesai! Terima kasih telah mencoba!</h3>";
        document.getElementById("submitBtn").style.display = "none";
        document.getElementById("nextBtn").style.display = "none";
        document.getElementById("feedback").innerHTML = "";
      }
    });

    loadQuestion();
  </script>
</body>
</html>
